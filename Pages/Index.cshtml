@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <h1 class="display-4 text-center">PasteBin</h1>
    <form method="post">
        <textarea asp-for="TextHandler.Text" type="text" class="form-control rounded-0" rows=10></textarea><br>
        <span asp-validation-for="TextHandler.Text" class="text-danger"></span>
        <div class="input-group mb-3">
            <input asp-for="TextHandler.Title" type="text" class="w-25 form-control" placeholder="Title">
            <span asp-validation-for="TextHandler.Title" class="text-danger"></span>
            <div class="input-group-append">
                <select asp-for="expireDuration" class="form-control input-group-addon" name="expiration">
                    <option class="dropdown-item" value="-1"> Never </option>
                    <option class="dropdown-item" value="0">1 minute</option>
                    <option class="dropdown-item" value="1">1 Day</option>
                    <option class="dropdown-item" value="31">1 Month</option>
                    <option class="dropdown-item" value="365">1 Year</option>
                </select>
                <button type="submit" class="btn btn-primary" asp-page="View">Insert</button>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
}

<style>
    .select-group input.form-control{ width: 65%}
    .select-group select.input-group-addon { width: 35%; }
</style>